#include <stdio.h>
int main()
{
    int i,j,r,c;
    printf("Enter the number of rows\n");
    scanf("%d",&r);
    printf("Enter the number of columns\n");
    scanf("%d",&c);
    int arr[r][c];
    printf("Enter the elements\n");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&arr[i][j]);
        }
    }
    
    printf("Elements of the array are\n");
    for(int k=0;k<r;k++)
    {
        for(int m=0;m<c;m++)
        {
            printf("%d\t",arr[k][m]);

        }
        printf("\n");
    }
}
